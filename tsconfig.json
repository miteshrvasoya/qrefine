{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "dist",          // ✅ compiled JS goes here
    "rootDir": "src",          // ✅ your TS source folder
    "lib": ["ES2020"],
    "sourceMap": true,         // ✅ enables debugging in TS
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
